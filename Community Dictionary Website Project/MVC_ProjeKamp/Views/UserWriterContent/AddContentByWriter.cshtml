@model EntityLayer.Concrete.Content

@{
    ViewBag.Title = "AddContentByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>İçerik Girişi</h2>
@using (Html.BeginForm("AddContentByWriter", "UserWriterContent", FormMethod.Post))
{
    <div class="form-group">
        <input type="hidden" name="HeadingID" value="@ViewBag.id" class="form-control" />
        @Html.Label("İçeriğinizi Oluşturun")
        @Html.TextAreaFor(x => x.ContentValue,10,30, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ContentValue, null, new { @class = "text-danger" })
        <br />
        <button class="btn btn-success">EKLE</button>
    </div>


}

